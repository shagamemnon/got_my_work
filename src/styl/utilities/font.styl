@import 'font_import/gotham'

$ProxiNova = 'proxima-nova', Roboto, Arial, sans-serif
$IdealSans = 'Open Sans', 'Helvetica Neue', Roboto, Arial, sans-serif
$Gotham = 'Gotham', Helvetica, sans-serif

$DefaultFont = $Gotham
$HeaderFont = $Gotham
$SubHeaderFont = $Gotham
$ParagraphFont = $Gotham

paragraph()
  font-family: $Gotham
  font-size: 0.85em
  font-weight: 300
  line-height: 1.5
  color: #111

header1()
  font-family: $HeaderFont
  font-weight: 400
  font-size: 3em
  letter-spacing: 2px
  line-height: 1.1

header2()
  font-family: $HeaderFont
  font-weight: 500
  line-height: 1.2
  font-size: 2.3em

header3()
  font-family: $HeaderFont
  font-weight: 700
  letter-spacing: 0.5px
  line-height: 1.2
  font-size: 1.6em
  color: #333

header4()
  font-family: $HeaderFont
  font-weight: 700
  font-size: 1.5em

header5()
  font-family: $HeaderFont
  font-weight: 300
  line-height: 1.2
  font-size: 1.1em

header6()
  font-family: $HeaderFont
  font-weight: 500
  font-size: 0.95em
  line-height: 1.3
