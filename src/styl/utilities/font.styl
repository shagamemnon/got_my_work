@import 'font_import/gotham'

$Gotham = 'Gotham', Roboto, Arial, sans-serif
$IdealSans = 'Open Sans', 'Helvetica Neue', Roboto, Arial, sans-serif

$DefaultFont = $ProxiNova
$HeaderFont = $Gotham
$SubHeaderFont = $ProxiNova
$ParagraphFont = 'Open Sans', 'Helvetica Neue', Roboto, Arial, sans-serif

paragraph()
  font-family: $ParagraphFont
  font-size: 1em
  font-weight: normal
  line-height: 1.5

header1()
  font-family: $Gotham
  font-weight: 500
  font-size: 2.9em
  letter-spacing: 1.9px

header2()
  font-family: $Gotham
  font-weight: 500
  font-size: 2.5em

header3()
  font-family: $Gotham
  font-weight: 300
  line-height: 1.2
  font-size: 2em

header4()
  font-family: $Gotham
  font-weight: 700
  font-size: 1.5em

header5()
  font-family: $Gotham
  font-weight: 700
  font-size: 1em