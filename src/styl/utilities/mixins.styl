button()
  font-family: $Gotham
  font-weight: 300
  letter-spacing: 0.5px
  font-size: 14px
  color: white
  padding: 1.1em 1.2em 1.14em
  border: none
  border-radius: 5px
  display: block
  width: 200px
  height: 50px
  cursor: pointer
  outline: none
  single-transition( background-color )

  &:hover, &.active
    outline: none
    background-color: #3273b5
    single-transition( background-color )

  a
    color: white
    text-decoration: none

single-transition( $property )
  transition: $property 300ms ease-out

slidePage( )
  position: absolute
  top: 0
  left: 0%
  width: 100%
  height: 100%
  overflow: hidden

  single-transition( left )

  &.off-left
    left: -100%
    single-transition( left )

  &.off-right
    left: 100%
    single-transition( left )

  &.focused-slide
    position: relative
    height: 100%
    overflow: hidden

layoutBackgroundColor( )
  background-color: #FBF7F4

alert( ) 
  position: fixed
  visibility: hidden
  background-color: $orange-color
  padding: 20px
  bottom: 40px
  right: 40px
  float: right
  box-shadow: 0 0 4px 0 rgba(0,0,0,0.5)
  
  p
    paragraph()
    font-size: 0.8em
    color: white