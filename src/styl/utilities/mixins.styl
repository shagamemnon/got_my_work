button()
  font-family: $Gotham
  font-weight: 500
  letter-spacing: 1.5px
  font-size: 18px
  color: white
  padding: 1.11em 1.3em
  border: none
  border-radius: 3px
  display: block
  width: 290px
  cursor: pointer
  outline: none
  single-transition( background-color )

  &:hover, &.active
    outline: none
    background-color: #3273b5
    single-transition( background-color )

  a
    color: white
    text-decoration: none

single-transition( $property )
  transition: $property 300ms ease-out

slidePage( )
  position: absolute
  top: 0
  left: 0%
  width: 100%
  height: 100%
  overflow: hidden

  single-transition( left )

  &.off-left
    left: -100%
    single-transition( left )

  &.off-right
    left: 100%
    single-transition( left )

  &.focused-slide
    position: relative
    height: 100%
    overflow: hidden

layoutBackgroundColor( )
  background-color: #FBF7F4