.manager-panel
	border: 3px solid #ccc
	margin: 40px

	.information
		max-width: 1000px
		margin: 80px auto
		background-color: white
		padding: 40px

		a
			span(1/5)
			display: inline-block

		a
			font-size: 16px
			color: #222
			text-decoration: none
			cursor: pointer
	 		&:hover, &:focus
				text-decoration: underline

		p
			span(1/5)
			padding: 30px 0
			margin: 0
			background-color: white
			paragraph()
			font-weight: 500
	 		&:hover, &:focus
				text-decoration: none
