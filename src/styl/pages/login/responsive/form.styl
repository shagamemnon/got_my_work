section.signup-header
  padding: 60px 0px 0
  z-index: 1
  max-width: 100%

  h1
    header1()
    text-align: center
    text-transform: uppercase
    letter-spacing: 0
    padding-bottom: 18px

  .container
    max-width: 100%
    margin: auto 20px
    overflow: hidden

    .company, .user
      box-shadow: none

    .company
      max-width: 100%
      margin: 0 auto 80px

    .user
      stack()
      max-width: 100%
      margin: 0px auto 0

    .signup
      background-color: white
      border-top: 62px solid transparent
      position: static
      z-index: 2
      border-radius: 2px
      border: none

      h2
        padding-bottom: 40px
        padding-top: 40px
        margin-bottom: 40px
        text-align: center
        header3()
        border-bottom: 2px solid #ddd

      p
        paragraph()

      button
        button()
        border-radius: 3px
        background: #FF6363
        color: white
        width: 270px
        margin: 20px auto 0 auto
        display: block
        font-family: $Gotham
        font-weight: 500
        letter-spacing: 1.5px
        cursor: pointer
        font-size: 15px
        single-transition( background-color )

        &:hover, &.active
          background-color: #B04343
          single-transition( background-color )

      form
        width: auto
        display: block
        max-width: 100%
        padding-left: 0px
        margin: auto
        padding-right: 0px
        text-align: left

        select[name="expertise"]
          height: 53px
          font-family: $Gotham
          font-size: 16px
          border: 2px solid #ccc
          border-radius: 3px
          margin: 10px 0 30px
          outline: none
          width: 600px
          display: block

        em, .error-message
          display: block
          text-transform: uppercase
          font-family: $Gotham
          font-size: .9em
          font-weight: 500
          padding-left: 35px
          letter-spacing: 0.5px
          color: #222

        .error-message
          color: #ff0000;
          padding-bottom: 10px;

        button
          display: block
          margin: 30px 32px
          width: 160px
          letter-spacing: 0px
          padding-top: 13px
          font-weight: 400
          height: 44px
          font-size: 16px
          background-color: $primary-color

        input[type="text"], input[type="password"]
          padding: 15px
          font-family: $Gotham
          font-size: 16px
          width: 260px
          max-width: 100%
          border: 2px solid #ccc
          border-radius: 3px
          margin: 10px auto 30px
          display: block
          outline: none

          &:hover, &:focus
            outline: none
            border: 2px solid $primary-color

        input[name="dob"]
          clearfix()

        .submit-button
          display: block
          text-align: right
          position: relative
          right: 0px

	    input.error
          border-color: #ff0000;

        .hidden
          display: none;

    .right-half
      stack()
      height: 335px
      background-size: 100%
      background-repeat: no-repeat
      background-position: center
      background-image: url('https://s3.amazonaws.com/igotmywork/user_profile/freelancer.png')
      margin: 40px auto 0
      position: static
      float: right
      overflow: hidden