.signup-header
  border-top: 65px solid #111
  padding: 80px 0px 0px 60px
  z-index: 1
  max-width: 100%
  margin: auto
  text-align: center
  display: block
  overflow: hidden
  background linear-gradient(#f2f2f2, #e7e7e7)

  h1
    header1()
    text-align: center
    text-transform: uppercase
    letter-spacing: 0
    padding-bottom: 18px

  .container
    max-width: 1500px
    margin: auto
    overflow: hidden

    .company
      max-width: 670px
      margin: 0 auto 80px

    .user
      col(1/2)
      max-width: 670px
      margin: 40px auto 0

    .signup
      background-color: white
      border-top: 62px solid transparent
      position: relative
      z-index: 2
      border-radius: 5px
      border: 2px solid #ddd

      h2
        padding-bottom: 40px
        padding-top: 40px
        margin-bottom: 40px
        text-align: center
        header2()
        border-bottom: 2px solid #ddd

      p
        paragraph()

      button
        button()
        border-radius: 3px
        background: #FF6363
        color: white
        width: 270px
        margin: 20px auto 0 auto
        display: block
        font-family: $Gotham
        font-weight: 500
        letter-spacing: 1.5px
        cursor: pointer
        font-size: 15px
        single-transition( background-color )

        &:hover, &.active
          background-color: #B04343
          single-transition( background-color )

      form
        width: 100%
        display: block
        max-width: 600px
        padding-left: 20px
        margin: auto
        padding-right: 20px
        text-align: left

        select[name="expertise"]
          height: 53px
          font-family: $Gotham
          font-size: 16px
          border: 2px solid #ccc
          border-radius: 3px
          margin: 10px 0 30px
          outline: none
          width: 600px
          display: block

        em
          display: block
          text-transform: uppercase
          font-family: $Gotham
          font-size: .9em
          font-weight: 500
          padding-left: 35px
          letter-spacing: 0.5px
          color: #222

        button
          display: block
          margin: 30px 32px
          width: 160px
          letter-spacing: 0px
          padding-top: 13px
          font-weight: 400
          height: 44px
          font-size: 16px
          background-color: $primary-color

        input[type="text"]
          padding: 15px
          font-family: $Gotham
          font-size: 16px
          width: 500px
          max-width: 100%
          border: 2px solid #ccc
          border-radius: 3px
          margin: 10px auto 30px
          display: block
          outline: none

          &:hover, &:focus
            outline: none
            border: 2px solid $primary-color

        input[name="dob"]
          clearfix()

        .submit-button
          display: block
          text-align: right
          position: relative
          right: 0px

    .right-half
      col(1/2)
      height: 800px
      background-size: cover
      background-repeat: no-repeat
      background-image: url('https://s3.amazonaws.com/igotmywork/user_profile/freelancer.png')
      margin: 170px auto 0
      position: relative
      float: right
      overflow: hidden