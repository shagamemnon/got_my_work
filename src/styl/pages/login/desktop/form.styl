section.signup-header
  padding: 0px 0px
  z-index: 1
  max-width: 100%
  margin: auto
  text-align: center
  display: block
  overflow: hidden
  background: transparent

  .container
    max-width: 1500px
    margin: auto
    overflow: hidden

    .company, .user, .manager
      max-width: 520px
      margin: 40px auto 10px
      box-shadow: 0 4px 16px #999

    .signup, .login
      background-color: white
      border-top: 62px solid transparent
      position: relative
      border-radius: 1px
      border: 1px solid #ddd

      h2
        padding-bottom: 40px
        padding-top: 40px
        margin-bottom: 0px
        text-align: center
        header3()
        letter-spacing: -1px
        border-bottom: 1px solid #ddd

      p
        paragraph()

      form
        width: 100%
        display: block
        max-width: 400px
        padding: 0px 20px
        margin: auto
        text-align: left

        select[name="expertise"]
          height: 53px
          font-family: $Gotham
          font-size: 16px
          border: 2px solid #ccc
          border-radius: 3px
          margin: 10px 0 30px
          outline: none
          width: 470px
          display: block

        em, .error-message
          display: block
          text-transform: uppercase
          font-family: $Gotham
          font-size: .75em
          margin-bottom: 11px
          margin-top: 33px
          font-weight: 500
          letter-spacing: 0.5px
          color: #222

        .error-message
          color: #ff0000;
          padding-bottom: 10px;

        input[type="text"], input[type="password"]
          padding: 15px
          font-family: $Gotham
          font-size: 0.75em
          width: 370px
          max-width: 100%
          border: 2px solid #ccc
          border-radius: 3px
          margin: 0px auto 30px
          display: block
          outline: none

          &:focus
            outline: none
            border: 2px solid $primary-color

        .inline
          display: inline-block
          margin-top: 0px
          margin-right: 10px

          input[type="text"]
            width: 80px
        
        .hidden
          display: none

        input.error
          border-color: #ff0000;

      .submit-button
        display: block
        text-align: center
        max-width: 670px
        margin: auto

        a
          text-decoration: none

        button#request
          button()
          display: block
          margin: 0px auto 40px
          width: 160px
          letter-spacing: 0px
          padding-top: 13px
          font-weight: 400
          height: 44px
          font-size: 16px
          background-color: $primary-color

        img
          text-align: center
          display: block
          float: none !IMPORTANT
          margin: auto
          max-height: 10px
          max-width: 100%