section.about_body
  position: relative
  border-top: 62px solid #323232

  .header-container
    background: center
    width: 100%
    z-index: 1
    background-color: #222
    height: 300px
    background-image: url("https://s3.amazonaws.com/igotmywork/about/about_bg.png")
    background-repeat: no-repeat
    background-size: cover
    padding-top: 150px
    overflow: hidden
    color: white
    @media (max-width: 500px)
      padding: 100px 0px 100px

    h2
      header1()
      margin: 0 auto
      text-align: center

    p
      paragraph()
      line-height: 1.8
      max-width: 750px
      margin: auto
      color: white
      z-index: 1
      padding: 20px 12px
      text-align: center
      display: none

  .team-container
    z-index: 4
    position: relative
    max-height: auto
    padding-top: 75px
    @media (min-width: 500px)
      padding-bottom: 30px
      height: auto
      padding-right: 50px
      padding-left: 50px
    @media (max-width: 770px)
      height: 2380px
      max-width: 100%
      padding-top: 50px

    h2
      header3()
      text-transform: uppercase
      line-height: 1.3
      margin: 0 auto 100px
      max-width: 700px
      text-align: center
      @media(max-width:500px)
        margin-bottom: 50px

  .team-row
    z-index: 3
    height: 1400px
    max-height: 100%
    max-width: 100%
    margin: auto
    width: 100%
    padding: 0px
    width: 820px

    .profile-pic
      img
        border-radius: 4px
        margin: auto
        display: table-cell
        vertical-align: middle
        width: auto
        height: 210px
        @media (min-width: 770px)
          col(1/3)
          width: auto

    .bio
      height: auto
      paragraph()
      color: white
      text-align: left
      float: right
      margin-top: 0px
      display: inline-block
      padding: 25px 20px 50px
      @media (min-width: 770px)
        max-width: 470px
        col(2/3)
        shift(1/18)
        text-align: left
        height: 260px
        margin-top: 0px
        padding-left: 10px
        padding-right: 0px
      @media (min-width: 1025px)
        max-width: 850px

      a
        text-decoration: none
        color: #222
        display: table-cell

        small
          padding-right: 30px
          font-size: 10px
          display: none

        img
          padding-top: 20px

      h6
        header4()
        font-family: $Gotham
        color: #222
        margin-top: -20px
        @media (max-width: 770px)
          text-align: center
          position: relative
          top: 10px

      em
        header5()
        font-family: $Gotham
        font-weight: 300
        color: #222
        padding-bottom: 12px
        @media(max-width: 770px)
          font-size: 19px
          position: relative
          top: 10px
          padding-bottom: 10px
          display: block
          text-align: center

      p
        paragraph()
        padding-top: 15px
        color: #222