.profile-container
  max-width: 1000px
  border-top: 62px solid transparent
  margin: auto
  padding: 80px 0
  display: block
  height: 900px

  .user-info
    display: block
    margin-bottom: 80px
    height: 120px
      
    .profile-picture
      col(1/7)
      cursor: pointer
      border-radius: 100%
      display: block
      cursor: pointer
      border: none

      .avatar
        display: block
        text-align: center
        background-image: url('https://s3.amazonaws.com/igotmywork/user_profile/upload_placeholder.png')
        height: 118px
        background-size: 118px auto
        background-repeat: no-repeat
        background-position: center
        position: relative
        border: none
        border-radius: 100%
        
        button
          border: 1px solid transparent

        img#avatar
          width: 118px
          height: 118px
          opacity: 1
          border-radius: 100%
          cursor: pointer
          visibility: hidden

        .uploadimgbtn
          font-size: 0px
          background-color: #eee
          position: absolute
          height: 118px
          width: 118px
          cursor: pointer
          background-image: url('https://s3.amazonaws.com/igotmywork/user_profile/upload_image.png')
          background-size: 80px auto
          background-repeat: no-repeat
          background-position: center
          border-radius: 100%
          border: none
          opacity: 0
          top: 0
          single-transition( opacity )
          
          &:hover, &:active, &:focus, &:after
            opacity: 0.9
                
    article
      col(5/7)

      .span
        padding-top: 6px
        padding-bottom: 3px

        h2
          header2()
          letter-spacing: -1px
          display: inline
          font-weight: 700

      a#open-skill, #open-location
        display: block
        margin-bottom: 30px
        margin-left: 3px
        text-decoration: none
        visibility: visible
        
        img
          padding-left: 5px

      input[name="skill"], h5
        font-size: 1.1em
        font-weight: 300
        color: #666
        border: none
        cursor: pointer
        display: inline
      
      input[name="location"], h6
        cursor: pointer
        margin-top: 0px
        display: inline
        paragraph()
        color: #333
        font-weight: 700
        border: none
      
      h5, h6
        visibility: visible

    .feedback
      col(1/7)
      float: right
      text-align: center
      border-radius: 100%
      
      img
        display: block
        max-height: 110px
        center()
      
      h6
        display: block
        paragraph()
        center()
        font-size: 0.7em
        font-weight: 700
        padding-top: 8px

#input-skill, #input-location
  background-color: white
  position: absolute
  z-index: 50
  display: none
  top: 190px
  opacity: 1
  height: 24px
  border-bottom: 1px dotted #555
  
  input
    background-color: white
    padding-left: 3px
    opacity: 1
    display: inline
    outline: none
    z-index: 51
    background-image: url('https://s3.amazonaws.com/igotmywork/user_profile/pencil.png')
    background-size: auto 13px
    background-repeat: no-repeat
    background-position: right
  
  img
    display: inline
    padding-left: 8px
    cursor: pointer

