section.signup-header
  padding: 0px 0px
  z-index: 1
  max-width: 100%
  margin: auto
  display: block
  overflow: hidden
  background: transparent

  .container
    max-width: 500px
    height: auto
    margin: auto
    overflow: visible
    background: white
    padding: 40px
    box-shadow: 1px 1px 10px 0px rgba(0,0,0,0.3)

    .project-listing
      max-width: auto

      h2
        padding-bottom: 30px
        padding-top: 30px
        margin-bottom: 0px
        text-align: center
        header3()
        letter-spacing: -1px

      p
        paragraph()

      form
        width: 100%
        display: block
        max-width: 360px
        padding: 0px 20px
        margin: auto
        text-align: left

        select[name="expertise"]
          height: 50px
          font-family: $Gotham
          font-size: 0.75em
          border: 2px solid #ddd
          border-radius: 3px
          margin: 10px 0 30px
          outline: none
          width: 359px
          display: block

        em, .error-message
          display: block
          text-transform: uppercase
          font-family: $Gotham
          font-size: .75em
          margin-bottom: 10px
          margin-top: 20px
          font-weight: 500
          letter-spacing: 0.5px
          color: #222

        .error-message
          color: #ff0000;
          padding-bottom: 10px;

        textarea
          padding: 15px
          font-family: $Gotham
          font-size: 0.75em
          width: 320px
          height: 120px
          max-width: 100%
          border: 2px solid #ccc
          border-radius: 3px
          margin: 0px auto 15px
          display: block
          outline: none

        input[type="text"]
          padding: 15px
          font-family: $Gotham
          font-size: 0.75em
          width: 320px
          max-width: 100%
          border: 2px solid #ccc
          border-radius: 3px
          margin: 0px auto 15px
          display: block
          outline: none

          &:focus
            outline: none
            border: 2px solid $primary-color

        .inline
          display: inline-block
          margin-top: 0px
          margin-right: 10px

          input[type="text"]
            width: 80px
        
        .hidden
          display: block

        input.error
          border-color: #ff0000;

      .submit-button
        display: block
        text-align: center
        max-width: 670px
        margin: auto

        a
          text-decoration: none

        button#request, button
          button()
          display: block
          margin: 30px auto 30px
          width: 160px
          letter-spacing: 0px
          padding-top: 13px
          font-weight: 400
          height: 44px
          font-size: 16px
          background-color: $primary-color

        img
          text-align: center
          display: block
          float: none !IMPORTANT
          margin: auto
          max-height: 10px
          max-width: 100%

#overlay
  opacity: 0
  background-color: #fff
  position: absolute
  top: 0px
  left: 0px
  z-index: 50
  padding-top: 0px
  width: 100%
  height: 100%
  visibility: hidden
  overflow: visible

#info
  opacity: 0
  top: 0
  margin: -100px auto 0
  padding: 0px 20px
  width:900px
  height: auto
  background: transparent
  z-index: 51
  position: absolute
  visibility: hidden
  overflow: visible

  img#close
    float: right
    position: absolute
    cursor: pointer
    top: -50px
    right: 0px
    height: 50px
  