section.technologies
	padding: 75px 0 75px
	background-color: #f5f5f5
	position: relative
	max-width: 100%
	margin: auto

	h2
		header3()
		color: #333
		text-transform: uppercase
		text-align: center
		margin-bottom: 20px

	.tiles-container
		center()
		max-width: 1100px

		.tile
			col(1/3)
			height: auto
			padding-bottom: 50px
			max-width: 100%
			margin: auto
			opacity: 0
			padding-top: 50px
			@media(max-width: 1024px)
				opacity: 1

			.icon
				col(1/2)
				text-align: right

				img
					width: auto
					opacity: 0.5
					max-width: 100%
					height: 40px

			.text
				col(1/2)

				h5
					header5()
					padding-left: 10px
					font-weight: 400
					color: $primary-color

				p
					paragraph()
					letter-spacing: 0.1px
					font-weight: 300
					color: #000
					margin: 10px 0 0
					padding-left: 10px
