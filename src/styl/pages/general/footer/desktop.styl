footer
  background-color: #111
  width: 100%
  max-width: 100%

  section
    position: relative
    margin: 0 auto
    clearfix()
    padding-top: 80px
    padding-bottom: 80px

    .tiles-container
      max-width: 960px
      margin: auto
      background-color: #111

      .footer-tile
        col(1/4)
        background-color: #111

        a
          display: block
          color: white
          opacity: 0.8
          margin-bottom: 10px
          font-size: 14px
          text-decoration: none

        h6
          color: white
          opacity: 0.8
          font-size: 20px
          margin-bottom: 40px
          font-weight: 500

        p
          color: white
          opacity: 0.8
          margin-bottom: 10px
          font-size: 14px
          letter-spacing: 0.4px

        button
          width: 171px
          height: 42px
          letter-spacing: 0.3px
          background-color: transparent
          color: white
          font-size: 12px
          border: 1px solid white
          margin: 0 0 22px
          border-radius: 1px
          cursor: pointer
          padding-top: 12px

          &:hover
            background-color: white
            color: black

            a
              color: black

        img
          height: 31px
          padding-right: 12px

        &:nth-child(2)
          shift(1/24)

        &:nth-child(3)
          shift(1/14)

        &:last-child
          shift(1/18)
