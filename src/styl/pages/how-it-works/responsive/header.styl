#header-section
  max-width: 100%
  margin: auto
  padding: auto
  position: relative

  .step-container
    border-top: 0
    background-image: url( 'https://s3.amazonaws.com/mycents/photos/centsdevshop/portfolio/saks/saks_header_bg.png')
    background-size: auto auto
    background-position: center
    overflow: hidden
    height: 680px

    .step
      max-width: 1100px
      margin: auto
      padding-left: 20px
      padding-right: 20px
      @media (max-width: 1023px)
        padding-top: 40px
        padding-bottom: 20px
        max-width: 900px

  .text-container
    stack()
    height: auto
    margin: 0px auto 10px

    img
      padding-top: 50px
      display: block
      margin: auto
      padding-bottom: 50px

    h2
      position: relative
      text-align: center
      max-width: 100%
      font-size: 1.7em

    p
      max-width: 100%
      text-align:  center
      paragraph()
      margin-bottom: 0px
      padding-bottom: 0px
      line-height: 1.5

  .image-container
    stack()
    display: none
    max-width: 100%
    height: auto
    float: right
    text-align: right
    opacity: 1
    margin: 0px auto 10px

    img
      display: block
      float: right
      width: 100%
      margin-top: 40px
      border-radius: 3px