// Header Styles

.landing-header
  background-image: url( 'https://s3.amazonaws.com/igotmywork/igotmywork_landing_bg.png' )
  background-size: cover
  background-position: 50% 0%
  height: 350px
  width: 100%
  display: block
  margin: auto
  padding-bottom: 94px
  border-top: 62px solid #111
  overflow: hidden
  position: relative

  .landing-header-inner
    width: 100%
    height: 100%
    margin: 0 auto
    position: relative

  .header-text
    position: absolute
    top: 140px
    display: block
    margin: auto
    z-index: 2
    width: 100%

    .quotes
      display: none

    h1
      header1()
      center()
      margin: auto
      position: relative
      max-width: 100%
      z-index: 1
      text-align: center
      color: white
      line-height: 1

    .header-buttons
      text-align: center

      button
        button()
        background-color: #FF6363
        margin: 40px 20px 0
        display: inline

      .company
        background-color: #3F8CD8

        &:hover, &.active
          background-color: #3273b5
          single-transition( background-color )

      .engineer
        background-color: #FF5B1F

        &:hover, &.active
          background-color: #db5220
          single-transition( background-color )