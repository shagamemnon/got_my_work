.user-dashboard
  max-width: 1000px
  margin: auto
  padding: 50px 0

  .user-info
    display: block
    margin-bottom: 50px
    height: auto
    padding: 0 25px

    img.avatar
      stack()
      width: 160px
      margin-bottom: 10px
      
    article
      stack()
      text-align: center

      .span

        h2
          header4()

      h5
        header5()
        font-size: 1em
        margin-bottom: 3px

      h6
        paragraph()
        font-weight: 700
        padding-bottom: 37px
        max-width: 200px
        margin: auto
        border-bottom: 1px solid #ccc

    .feedback
      stack()
      margin-top: 37px
      text-align: center
      border-radius: 100%

  .dashboard-container
    display: block
    height: auto

    .sidebar
      stack()
      border-top: none
      padding-top: 0
      height: auto

      span.active
        
        a
          box-shadow: inset 0px 4px 0px 0 $teal
          opacity: 1
          background: #087cc9

      span
        span(1/3)
        height: 80px

        h6
          stack()
          font-size: 0.5em
          display: block
          text-align: center
          padding-top: 15px

        img
          stack()
          center()
          height: 30px
          width: auto
      
      a
        padding-left: 0

    .content
      stack()
      padding-top: 50px

      h4
        padding-left: 25px
        padding-right: 25px
        padding-bottom: 25px
      
      p
        padding-top: 0px
        padding-left: 25px
        padding-right: 25px