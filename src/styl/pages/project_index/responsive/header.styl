section.project_header
  padding: 40px 0 10px
  border-top: 62px solid transparent
  background-color: #eee

  .header-container
    max-width: 1000px
    margin: auto
    height: auto
    width: 100%

    h1.project-title
      stack()
      text-align: center
      display: block
      header2()
      padding-bottom: 40px
      font-weight: 700

    .search-bar
      stack()
      display: block
      height: auto
      text-align: center
      max-width: 92%
      background-color: #eee
      margin-top: 0px
      box-shadow: none
      border-radius: 1px

      form
        max-width:100%
        width: 100%
        margin: 0px auto
        outline: none
        display: block

      input
        max-width: 96%
        width: 100%
        padding: 20px 2px 20px 8px
        font-size: 18px
        outline: none
        border: 1px solid transparent
        border-bottom-color: #ddd
        box-shadow: 0px 0px 0px 1px #ddd
        box-shadow: 0 0 4px 2px rgba(0,0,0,0.2)
        margin-bottom: 20px

        &:focus
          border: 1px solid $primary-color
          box-shadow: 0 0 0 0

      select
        col(1/3)
        font-size: 10px
        font-weight: 300
        margin-left: 0
        border-radius: 0%

      button
        col(2/9)
        shift(1/21)
        button()
        clearfix()
        border: none
        max-width: 120px
        height: 42px
        padding-top: 12px
        text-align: center
        background-color: $primary-color