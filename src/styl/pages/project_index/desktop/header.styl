section.project_header
  padding: 80px 0 40px
  border-top: 62px solid transparent
  background-color: #eee

  .header-container
    max-width: 1000px
    margin: auto
    height: 120px
    width: 100%

    h1.project-title
      col(1/3, gutter: 2)
      display: block
      header1()
      letter-spacing: -2px
      padding-top: 10px
      font-weight: 700

    .search-bar
      col(2/3, gutter: 2)
      display: block
      height: auto
      text-align: center
      max-width: 666px
      background-color: #ddd
      margin-top: 0px
      box-shadow: 0px 0px 0px 1px #ddd
      box-shadow: 0 0 6px 2px rgba(0,0,0,0.2)
      border-radius: 1px

      form
        max-width:666px
        margin: 0px auto
        outline: none
        display: block

      input
        width: 638px
        padding-top: 20px
        padding-bottom: 20px
        padding-left: 20px
        padding-right: 0
        font-size: 18px
        outline: none
        border: 1px solid transparent
        border-bottom-color: #ddd

        &:focus
          border: 1px solid $primary-color
          box-shadow: 0 0 0 0

      .search
        padding:8px 15px
        background:rgba(50, 50, 50, 0.2)
        border:0px solid #dbdbdb

      .button
        position:relative
        padding:6px 15px
        left:-8px
        border:2px solid #207cca
        background-color:#207cca
        color:#fafafa

        &:hover
          background-color:#fafafa
          color:#207cca

      select
        span(3/10)
        border: 1px solid transparent
        height: 42px
        font-family: $Gotham
        font-size: 14px
        font-weight: 300
        margin-left: 14px
        border-radius: 0px
        outline: none
        clearfix()
        background: #ddd
        color: #666

      button
        col(2/9)
        shift(1/21)
        button()
        clearfix()
        border: none
        max-width: 120px
        height: 42px
        padding-top: 12px
        text-align: center
        background-color: $primary-color