#header-section
  background-image: url( 'https://s3.amazonaws.com/mycents/photos/centsdevshop/portfolio/CSG/csg_bg.png')
  background-size: cover
  background-position: 50% 50%
  height: 850px
  max-width: 100%
  display: block
  margin: auto
  border-top: 62px solid #323232

  img
    display: block
    padding-top: 45px
    margin: auto
    padding-bottom: 45px

  h2
    font-family: $Gotham
    font-size: 2.6em
    font-weight: 500
    line-height: 1.2
    letter-spacing: 0px
    text-align: center
    color: white
    padding-left: 20px
    padding-right: 20px