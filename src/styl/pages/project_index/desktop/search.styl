section.project_index
  background-color: #eee

  .dashboard-container
    display: block
    height: 1000px
    max-width: 1000px
    margin: auto
    padding-top: 60px

    .check-box
      width: 20px
      position: relative
      display: inline
      margin: 20px auto
      label
        width: 20px
        height: 20px
        cursor: pointer
        position: absolute
        top: -3px
        left: 0
        border: 2px solid $teal
        background: transparent
        border-radius: 2px
        &:after
          content: ''
          width: 9px
          height: 5px
          position: absolute
          top: 4px
          left: 4px
          border: 3px solid $teal
          border-top: none
          border-right: none
          background: transparent
          opacity: 0
          transform: rotate(-45deg)

        &:hover::after
          opacity: 0.3

    .check-box input[type=checkbox]
      visibility: hidden
      &:checked + label:after
        opacity: 1

    .sidebar
      col(1/3, gutter: 2)
      background-color: transparent
      padding-top: 0px
      height: 800px
      background-color: white
      float: left
      box-shadow: 0 0 6px 1px rgba(0,0,0,0.2)

      h2
        header4()
        margin-top: 40px
        padding-bottom: 20px
        padding-left: 40px
        display: block
        text-transform: uppercase

      a
        display: block
        text-decoration: none
        height: 25px
        padding-top: 10px
        padding-bottom: 0
        padding-left: 60px
        margin-bottom: 0px
        cursor: pointer
        single-transition( opacity )

        h5
          display: inline
          font-size: 15px
          color: #000
          padding-left: 10px
          font-weight: 500

      &:after
        display: block
        clear: both
        content: ''

    .content
      col(2/3, gutter: 2)
      padding-top: 0px
      height: 1000px
      background-color: white
      float: right
      box-shadow: 0 0 6px 1px rgba(0,0,0,0.2)

      .tab
        display: none

      .tab.active
        display: block

      a.project-listing
        text-decoration: none
        color: #222
        max-width: 575px
        margin: 60px auto 0
        padding: 40px 30px 20px
        display: block
        width: 100%
        border-top: 1px solid #ddd

        h4
          header5()
          font-weight: 700
          letter-spacing: 0
          display: block
          padding-bottom: 10px

        em
          display: inline
          height: 25px
          font-size: 0.7em
          padding-right: 9px
          color: #FF5B1F
          font-weight: 500

        p
          paragraph()
          padding-top: 5px
          padding-bottom: 10px
        
        span
          col(1/5)
          margin-top: 15px
          color: #222
          font-weight: 500
          font-size: 0.6em
          text-align: center
          background-color: #ddd
          box-shadow: 0px 10px 0 0 #ddd, 0px 10px 0 0 #ddd, 0px -10px 0 0 #ddd, 0px 10px 0 0 #ddd
          border-radius: 1px
#overlay
  opacity: 0
  background-color: #fff
  position: absolute
  top: 0px
  left: 0px
  z-index: 50
  padding-top: 120px
  width: 100%
  height: 100%
  visibility: hidden

#info
  opacity: 0
  top: 0
  margin: -200px auto 0
  padding: 0px 20px
  width:920px
  height: auto
  background: transparent
  z-index: 51
  position: absolute
  visibility: hidden

  img#close
    float: right
    position: absolute
    cursor: pointer
    top: 0px
    right: 0px
    height: 50px