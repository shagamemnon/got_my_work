body
  background-color: #eee

section.project_index
  height: 100%

  .dashboard-container
    display: block
    height: 100%
    max-width: 1000px
    margin: auto
    padding-top: 60px

    .check-box
      width: 15px
      position: relative
      display: inline
      margin: 15px auto
      label
        width: 15px
        height: 15px
        cursor: pointer
        position: absolute
        top: 0px
        left: 0
        border: 2px solid $teal
        background: transparent
        border-radius: 2px
        &:after
          content: ''
          width: 9px
          height: 5px
          position: absolute
          top: 3px
          left: 2px
          border: 2px solid $teal
          border-top: none
          border-right: none
          background: transparent
          opacity: 0
          transform: rotate(-45deg)

        &:hover::after
          opacity: 0.3

    .check-box input[type=checkbox]
      visibility: hidden
      &:checked + label:after
        opacity: 1

    .sidebar
      span(1/3)
      background-color: transparent
      padding-top: 0px
      height: 800px
      background-color: white
      float: left
      box-shadow: 0 0 6px 1px rgba(0,0,0,0.2)
      margin-right: -1px

      h2
        header4()
        margin-top: 40px
        padding-bottom: 20px
        padding-left: 40px
        display: block
        text-transform: uppercase

      a
        display: block
        text-decoration: none
        height: 25px
        padding-top: 10px
        padding-bottom: 0
        padding-left: 60px
        margin-bottom: 0px
        cursor: pointer
        single-transition( opacity )

        h5
          display: inline
          font-size: 13px
          color: #111
          padding-left: 10px
          font-weight: normal

      &:after
        display: block
        clear: both
        content: ''


    .content
      span(2/3)
      padding-top: 0px
      height: 100%
      margin-bottom: 100px
      background-color: white
      float: right
      box-shadow: 3px 0 6px 0px rgba(0,0,0,0.2)
      border-left: 1px solid #ddd        
      border-bottom-right-radius: 4px
      border-bottom-left-radius: 4px

      a.project-listing
        text-decoration: none
        color: #222
        max-width: 575px
        margin: 30px auto 0
        display: block
        padding: 20px 0px 20px
        width: 100%
        border-bottom: 1px solid #ddd
        background-image: none
        background-repeat: no-repeat
        background-position: center
        background-size: 50px auto

        h4
          header5()
          font-weight: 700
          letter-spacing: 0
          display: block
          padding-bottom: 10px

        em
          display: inline
          height: 25px
          font-size: 0.7em
          padding-right: 9px
          color: #FF5B1F
          font-weight: 500

        p
          paragraph()
          padding-top: 5px
          padding-bottom: 10px
        

        .tags
          display: block
          clearfix()
          
          p.skills
            col(1/8, gutter: 2)
            margin-top: 14px
          
          p
            col(1/5, gutter: 2)
            clearfix()
            margin-top: 15px
            color: #222
            font-weight: 500
            font-size: 0.6em
            text-align: center
            background-color: #ddd
            box-shadow: 0px 4px 0 0 #ddd, 0px 4px 0 0 #ddd, 0px -3px 0 0 #ddd, 0px 3px 0 0 #ddd
            border-radius: 4px
            padding-bottom: 5px
      
      // a.project-listing:nth-of-type(n+4)
      //   border-bottom: none
      
      .load-more
        display: block
        center()
        text-align: center
        
        a
          display: inline-block
          padding: 30px 15px
          cursor: pointer
          font-size: 2em
          font-weight: 700
          font-family: $Gotham
          text-decoration: none
          color: $primary-color
          
          &:active
            color: #333
        
        a:after
          color: #333
                  

#overlay
  lightbox()
  padding-top: 120px

#overlay + div
  margin: 0px auto 0
  width: 920px