.dashboard-container
  .dashboard
    section.participants
      max-width: 700px
      margin-left: 50px
      margin-top: 40px
      margin-bottom: 50px
      min-height: 130px
      
      .titles
        position: relative
        margin: auto
        
        em.left
          col(3/7)
          padding-bottom: 20px
          text-transform: uppercase
          color: #333
          font-size: 0.80em
          font-weight: 500
        
        em.right
          col(1/2)
          padding-bottom: 20px
          text-transform: uppercase
          color: #333
          font-size: 0.80em
          font-weight: 500

      .company
        col(3/7)
        
        .logo
          background-image: url('https://s3.amazonaws.com/igotmywork/duniya.png')
          height: 100px
          background-size: auto
          background-repeat: no-repeat

      .freelancer
        col(1/2)
        
        .avatar
          col(1/3)
          background-image: url('https://s3.amazonaws.com/igotmywork/user_profile/avatar.png')
          background-size: 100%
          height: 100px
          background-repeat: no-repeat
        
        .name
          col(2/3)
          shift(1/20)
          
          p
            font-size: 0.80em
            position: absolute
            margin-top: 30px
            display: inline-block
          
          small
            position: relative
            top: 50px
            font-size: 0.8em
            color: #999
            font-weight: 300
            margin-top: 40px