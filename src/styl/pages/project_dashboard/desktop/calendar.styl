.dashboard-container
	
	.dashboard
		
		section.status
			padding-top: 40px
			border-top: 1px solid #ddd
			padding-left: 50px
			
			em
				display: block
				text-transform: uppercase
				color: #333
				font-size: 0.80em
				font-weight: 500
				padding-bottom: 30px
			
			p.stage
				width: 76px
				border-radius: 1px
				margin-right: 3px
				height: 20px
				line-height: 20px
				padding: 0
				font-size: 0px
				display: inline-block
				text-align: center
				color: white
				
				small
					display: block
					text-align: center
					text-transform: uppercase
					font-size: 9px
					padding-top: 5px
					color: #222
					font-weight: 700
				
			#active
				background-color: $primary-color

			#complete
				background-color: $primary-color
				opacity: 0.7
				
				small
					font-weight: 400
			
			#inactive
				background-color: #ddd
				font-size: 0px
				transition: 200ms
				font-weight: 300
				
				small
					font-weight: 400
				
				&:hover
					transition: 200ms
					background-color: $primary-color
					cursor: pointer
					font-size: 8px
				
				&::before
					content: "Mark"

		section.calendar
			col(3/5)
			margin-left: 50px
			margin-top: 40px
			background: #eee
			padding-top: 20px
			border-radius: 2px
			margin-bottom: 40px

			.header
				background: #eee
				max-width: 340px
				border: none
				margin: auto
				text-align: center
				
				a
					col(1/3)
					text-align: right
					opacity: 0.6
					single-transition( opacity )
					
					&:first-child
						text-align: left
					
					img
						height: 18px
						width: 9px
						position: relative
						transition: 200ms
					
						&:hover
							single-transition( opacity )
							transition: 200ms
							opacity: 1
							margin-top: -4px
							height: 26px
							width: 13px

				h2
					span(1/3)
					color: #111
					border: none
					header6()
					padding: 0
					margin-bottom: 10px

			table
				background #eee
				border-collapse collapse
				color #222
				font-size 12px
				width 100%
				border-left: 15px solid #eee
				border-right: 15px solid #eee
				border-bottom: 15px solid #eee
				display: none
			
			tr
				td
					color #444
					line-height 44px
					text-align center
					font-size: 11px
					font-weight 500
				
				.future
					color #bbb

			tr
				&:first-child td
					color #222
					border-bottom: 1px solid #ccc

			.start
				background #ccc
				border-radius: 100%
				box-shadow: inset 0px 0px 0px 5px #eee
				width: 44px
				border 0

			.due
				border-radius: 100%
				width: 44px
				color: white
				box-shadow: inset 0px 0px 0px 5px #eee
				border: none
				background-color: red

			.today
				border 0
				font-weight: 800
				font-size: 15px
				color: black

		.key
			col(1/5)
			float: right
			
			.dot
				border-radius: 50%
				margin-bottom: 30px
				height: 20px
				width: 20px
				
				p
					font-size: 0.8em
					line-height: 20px
					color: #aaa
					padding-left: 40px
			
			.start
				background-color: #ccc
			
			.due
				background-color: red
				
			.today
				background-color: black

.this-month
	display: block