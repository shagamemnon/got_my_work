.dashboard-container
	border-top: 62px solid #222
	background-color: #eee
	height: auto
	padding-bottom: 100px

	h2
		padding-bottom: 40px
		padding-top: 40px
		margin-bottom: 40px
		text-align: center
		header3()
		border-bottom: 1px solid #ddd

	.dashboard
		background-color: white
		border-top: 62px solid transparent
		max-width: 700px
		margin: 40px auto 0
		border-radius: 5px
		border: 1px solid #ddd

		section.participants
			max-width: 700px
			margin-left: 50px
			margin-top: 40px
			margin-bottom: 50px
			min-height: 130px
			
			.titles
				position: relative
				margin: auto
				
				em.left
					col(3/7)
					padding-bottom: 20px
					text-transform: uppercase
					color: #333
					font-size: 0.80em
					font-weight: 500
				
				em.right
					col(1/2)
					padding-bottom: 20px
					text-transform: uppercase
					color: #333
					font-size: 0.80em
					font-weight: 500

			.company
				col(3/7)
				
				.logo
					background-image: url('https://s3.amazonaws.com/igotmywork/duniya.png')
					height: 100px
					background-size: auto
					background-repeat: no-repeat

			.freelancer
				col(1/2)
				
				.avatar
					col(1/3)
					background-image: url('https://s3.amazonaws.com/igotmywork/user_profile/avatar.png')
					background-size: 100%
					height: 100px
					background-repeat: no-repeat
				
				.name
					col(2/3)
					shift(1/20)
					
					p
						font-size: 0.80em
						position: absolute
						margin-top: 30px
						display: inline-block
					
					small
						position: relative
						top: 50px
						font-size: 0.8em
						color: #999
						font-weight: 300
						margin-top: 40px

		section.status
			padding-top: 40px
			border-top: 1px solid #ccc
			padding-left: 50px
			
			em
				display: block
				text-transform: uppercase
				color: #333
				font-size: 0.80em
				font-weight: 500
				padding-bottom: 30px
			
			.stage
				height: 20px
				width: 76px
				background-color: $primary-color
				border-radius: 1px
				margin-right: 3px
				display: inline-block
				
				small
					display: block
					text-align: center
					font-size: 0.65em
					padding-top: 28px
				
			#complete
				opacity: 0.6
			
			#inactive
				background-color: #ddd

		.calendar
			col(3/5)
			margin-left: 50px
			margin-top: 40px
			background: #eee
			padding-top: 20px
			border-radius: 2px
			margin-bottom: 40px

			.header
				background: #eee
				max-width: 400px
				border: none
				text-align: center
				
				.arrow-left
					span(1/3)
				
				.arrow-right
					span(1/3)
				
				h2
					span(1/3)
					color: #111
					border: none
					header6()
					padding: 0
					margin-bottom: 10px

			table
				background #eee
				border-collapse collapse
				color #222
				font-size 12px
				width 100%
				border-left: 15px solid #eee
				border-right: 15px solid #eee
				border-bottom: 15px solid #eee
			
			tr
				td
					color #444
					line-height 44px
					text-align center
					font-size: 11px
					font-weight 800
				
				.future
					color #bbb

			tr
				&:first-child td
					color #222
					border-bottom: 1px solid #ccc

			.start
				background #ddd
				border-radius: 50%
				width: 44px
				border 0
				box-shadow 0 0px 6px rgba(0, 0, 0, .5) inset

			.due
				background $primary-color
				border-radius: 50%
				width: 44px
				color: white
				border 0
				box-shadow 0 0px 6px rgba(0, 0, 0, .5) inset
			
			.today
				border 0
				color: red

		.key
			col(1/5)
			float: right
			
			.dot
				border-radius: 50%
				margin-bottom: 30px
				height: 20px
				width: 20px
				
				p
					font-size: 0.8em
					line-height: 20px
					color: #aaa
					padding-left: 40px
			
			.due
				background-color: $primary-color
			
			.start
				background-color: red
			
			.today
				background-color: #ddd

		section.files-row
			max-width: 646px
			width: 100%
			display: inline-block
			padding-bottom: 40px
			border-top: 1px solid #ddd
			line-height: 20px
			padding-left: 55px
			margin-right: 50px

			.left
				col(1/2)

				em
					display: block
					text-transform: uppercase
					color: #333
					font-size: 0.80em
					font-weight: 500
					padding-bottom: 25px
					padding-top: 30px

				a
					text-decoration: none
					font-size: 0.77em
					display: block
					color: $primary-color
					cursor: pointer
				
				small
					display: block
					font-size: 0.77em
					color: #777
			
			.right
				col(1/2)
				
				a
					display: block
					cursor: pointer
					text-align: right
					color: $primary-color
					font-size: 0.80em
					font-weight: 300
					padding-bottom: 30px
					padding-top: 30px
					padding-right: 50px

		
		.dashboard-buttons
			text-align: center
			border-top: 1px solid #ddd
			padding-bottom: 30px

			button
				button()
				text-transform: none
				letter-spacing: 0.5px
				background-color: #FF6363
				margin: 40px 10px 0
				display: inline
				width: 300px
				padding-top: 12px
				padding-bottom: 12px

			.deliver
				background-color: #3F8CD8
				font-size: 13px
				font-weight: 400

				&:hover, &.active
					background-color: #3273b5
					single-transition( background-color )

			.cancel
				background-color: #aaa
				font-size: 13px
				font-weight: 400

				&:hover, &.active
					background-color: #999
					single-transition( background-color )