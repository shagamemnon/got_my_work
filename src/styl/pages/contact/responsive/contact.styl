#contact
  background-color: white
  border-top: 62px solid #323232
  padding: 80px 0 120px
  margin: 0 auto
  position: relative
  overflow: hidden
  z-index: 1
  @media(max-width: 769px)
    display: none

  h3
    max-width: 960px
    header2()
    color: #222
    margin: 0 auto
    padding-bottom: 20px
    text-align: center

  p
    paragraph()
    max-width: 470px
    text-align: center
    padding-bottom: 40px
    margin: auto

  form
    margin-top: 50px
    padding-top: 36px
    width: 630px
    margin: 0 auto
    position: relative

    .pencil
      position: absolute
      right: -305px
      bottom: -40px
      height: 465px

    .contact-info-container
      clearfix( )
      width: 630px
      margin: 0 auto 12px auto

    .contact-info
      float: left
      width: 309px
      font-family: $SubHeaderFont
      font-size: 12px
      margin: 0

      td
        text-align: center
        vertical-align: middle

      img
        height: 28px
        width: auto
        display: none

      .text
        width: 269px
        font-size: 17px
        font-family: $Gotham
        font-weight: 400
        color: #222

        a
          color: #222
          letter-spacing: 0.2px
          text-decoration: none
          border-bottom: 1px solid #222

        &.phone
          letter-spacing: 1px

      &:first-child
        margin-right: 12px

      input[type="text"]
        col(1/2)
        width: 270px
        padding: 10px 18px
        font-size: 16px
        font-family: $Gotham
        font-weight: 400
        border-radius: 4px
        border: solid 2px #ddd
        diplay: block
        margin-top: 35px

        &:focus
          outline: none

    .textarea-border
      position: relative
      margin: 0 auto
      padding-bottom: 59px
      border: solid 2px #ddd
      border-radius: 4px
      background-color: white
      width: 626px
      cursor: text

      &:focus
        outline: none
        border: 2px solid #FF6363

      .submit-button
        position: absolute
        bottom: 12px
        right: 12px
        border: 0
        background-color: $primary-color
        color: #FFFFFF
        font-size: 16px
        font-family: $Gotham
        font-weight: 400
        letter-spacing: 0.5px
        border-radius: 2px
        width: 160px
        height: 35px
        line-height: 33px
        cursor: pointer

      textarea
        width: 587px
        height: 96px
        border-radius: 4px
        padding: 10px 18px
        resize: none
        border: 0
        font-size: 16px
        font-family: $Gotham
        font-weight: 400

        &:focus
          outline: none

.mobile-contact
  background-color: white
  border-top: 62px solid transparent
  margin: 60px auto
  position: relative
  overflow: hidden
  z-index: 2
  @media(min-width: 768px)
    display: none

  h3
    margin: auto
    padding: 0 10px
    font-size: 27px
    letter-spacing: 0.3px
    text-align: center
    text-transform: uppercase
    font-weight: 500
    font-family: $Gotham

  p
    paragraph()
    margin-top: 12px
    text-align: center
    margin-bottom: 20px

  button
    button()
    border-radius: 3px
    background: $primary-color
    color: white
    width: 270px
    margin: 20px auto 0 auto
    display: block
    font-family: $Gotham
    font-weight: 500
    letter-spacing: 1.5px
    cursor: pointer
    font-size: 15px
    single-transition( background-color )

    &:hover, &.active
      background-color: blue
      single-transition( background-color )

  form
    width: 100%
    display: inline
    max-width: 100%
    padding-left: 20px
    padding-right: 20px
    @media(min-width: 767px)
      display: none

    input[type="text"]
      padding: 18px
      font-family: $Gotham
      font-size: 16px
      width: 300px
      max-width: 100%
      border: 2px solid #ccc
      border-radius: 3px
      margin: 12px auto
      display: block

      &:hover, &.active
        outline: none
        border: 2px solid #FF6363

    textarea
      padding: 18px
      font-family: $Gotham
      font-size: 16px
      width: 300px
      max-width: 100%
      height: 200px
      border: 2px solid #ccc
      border-radius: 3px
      margin: 12px auto
      display: block

      &:hover, &.active
        outline: none
        border: 2px solid #FF6363