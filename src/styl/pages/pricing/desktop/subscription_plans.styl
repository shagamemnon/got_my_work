section.subscription-plans
  padding: 75px 0 150px
  position: relative
  top: -50px

  h2
    max-width: 960px
    header1()
    letter-spacing: 1px
    color: white
    margin: 0 auto
    padding-bottom: 20px
    text-align: center

  p
    paragraph()
    color: white
    text-align: center
    padding-bottom: 220px
    margin: auto

  .plans
    width: 1000px
    margin: 0 auto
    clearfix()

    a
      text-decoration: none

  .subscription
    col(1/4)
    height: 380px
    border-radius: 2px
    cursor: pointer
    single-transition( box-shadow )

    h4
      header4()
      font-weight: 300
      color: $primary-color
      text-transform: uppercase
      text-align: center
      display: block
      max-width: 100%
      margin: 30px auto 15px
      width: 150px
      letter-spacing: 0.5px
    
    .hr
      max-width: 60px
      margin: 0px auto 30px
      border-top: 2px solid #ccc

    .sub-header
      display: block
      max-width: 100%
      margin: auto
      height: 145px
      color: #777
      width: 145px
      text-align: center
      border-radius: 50%
      border: 2px dotted $primary-color
      single-transition( background )

      &:hover
        single-transition( background )
        background: $primary-color
        border: 2px dotted white
        color: white

      em.rate
        font-family: 'Gotham'
        display: block
        text-align: center
        font-style: normal
        font-weight: 200
        font-size: 46px
        position: relative
        top: 45px
        padding-bottom: 45px
        letter-spacing: -3px

      em.year
        position: relative
        font-size: 11px
        top: 8px
        padding-bottom: 20px
        vertical-align: baseline
        display: block
        font-style: italic
        text-align: center
        padding-left: 2px
        letter-spacing: 0.5px

    .description
      margin-top: 25px

      p
        display: block
        text-align: left
        margin: auto
        max-width: 400px
        padding-top: 12px
        color: #222
        font-weight: 400
        font-size: 12px
        padding-left: 35px
        padding-bottom: 0
        @media (max-width: 600px)
          padding-left: 5px
          font-size: 16px

        &.highlight
          color: #EE7637

      button
        background-color: #bbb
        text-transform: uppercase
        font-weight: 500
        color: white
        font-size: 13px
        display: block
        margin: 30px auto 0
        width: 160px
        max-width: 100%
        height: 35px
        border: none
        opacity: 0.92
        cursor: pointer
        outline: none
        border-radius: 2px
        letter-spacing: 1px

        &:hover
          opacity: 1
          background-color: $primary-color
          color: white

        a
          text-decoration: none
          color: white
