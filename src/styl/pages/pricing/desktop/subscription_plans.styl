section.subscription-plans
  padding: 75px 0
  background: transparent
  position: relative

  h2
    max-width: 960px
    header1()
    letter-spacing: 1px
    color: white
    margin: 0 auto
    padding-bottom: 20px
    text-align: center

  p
    paragraph()
    color: white
    text-align: center
    padding-bottom: 220px
    margin: auto

  .plans
    width: 1000px
    margin: 0 auto
    clearfix()

    a
      text-decoration: none

  .subscription
    col(1/4)
    height: 380px
    border-radius: 2px
    cursor: pointer
    single-transition( box-shadow )

    &:hover
      single-transition( box-shadow )
      background: $primary-color

    h4
      header5()
      color: $primary-color
      text-transform: uppercase
      text-align: center
      display: block
      max-width: 100%
      margin: 30px auto
      width: 150px
      letter-spacing: 0.5px

    .sub-header
      display: block
      max-width: 100%
      margin: auto
      height: 145px
      width: 145px
      text-align: center
      border-radius: 50%
      border: 3px dotted $primary-color

      em.rate
        font-family: 'Gotham'
        display: block
        text-align: center
        font-style: normal
        font-weight: 300
        font-size: 40px
        position: relative
        top: 50px
        color: #666
        padding-bottom: 45px
        letter-spacing: -2px

      em.year
        position: relative
        font-size: 11px
        top: 8px
        padding-bottom: 20px
        vertical-align: baseline
        display: block
        color: #222
        font-style: italic
        text-align: center
        padding-left: 2px
        letter-spacing: 0.5px

    .description
      margin-top: 25px

      p
        display: block
        text-align: left
        margin: auto
        max-width: 400px
        padding-top: 12px
        color: #222
        font-weight: 400
        font-size: 12px
        padding-left: 35px
        padding-bottom: 0
        @media (max-width: 600px)
          padding-left: 5px
          font-size: 16px

        &.highlight
          color: #EE7637

      button
        background-color: #bbb
        text-transform: uppercase
        font-weight: 500
        color: white
        font-size: 13px
        display: block
        margin: 30px auto 0
        width: 160px
        max-width: 100%
        height: 35px
        border: none
        opacity: 0.92
        cursor: pointer
        outline: none
        border-radius: 2px
        letter-spacing: 1px

        &:hover
          opacity: 1
          outline: none

        a
          text-decoration: none
          color: white
