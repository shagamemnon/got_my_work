// Header Styles

.pricing-header
  background-image: url( 'https://s3.amazonaws.com/igotmywork/pricing/pricing_bg.jpg' )
  background-size: cover
  background-repeat: no-repeat
  height: 550px
  background-position: 50% 50%
  width: 100%
  display: block
  margin: auto
  border-top: 62px solid #111 
  overflow: hidden
  position: relative

  h1
    display: block
    color: white
    font-size: 3.1em
    line-height: 1.3
    margin: 0 auto
    text-align: center
    text-transform: uppercase
    font-family: $Gotham
    font-weight: 500
    letter-spacing: 1.5px