// Header Styles

.select
  center()
  
  h1
    header1()
    center()
    margin: auto
    position: relative
    top: 200px
    max-width: 100%
    z-index: 1
    text-align: center
    color: #222
    font-size: 3.1em
    line-height: 1
    font-family: $Gotham
    font-weight: 500
    letter-spacing: -2px


.pricing-header
  background-image: url( 'https://s3.amazonaws.com/igotmywork/pricing/pricing_bg.jpg' )
  background-size: cover
  background-repeat: no-repeat
  height: 350px
  background-position: 50% 50%
  width: 100%
  display: block
  margin: auto
  position: relative
  opacity: 0.7

  h3
    display: none

  h2
    display: block
    z-index: -1
    color: white
    padding-top: 350px
    font-size: 3.1em
    line-height: 1
    margin: 0 auto
    text-align: center
    font-family: $Gotham
    font-weight: 500
    letter-spacing: 0px
    text-transform: none
    vertical-align: baseline
    background: linear-gradient( top, transparent, white )