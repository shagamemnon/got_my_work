// Header Styles

.select
  display: none

.pricing-header
  background-image: none
  background-size: 150px 150px
  background-repeat: no-repeat
  height: 180px
  background-position: 50% 50%
  width: 100%
  display: block
  margin: auto
  border-top: 62px solid #111 
  opacity: 1

  h2
    display: none

  h3
    display: block
    color: #222
    padding-top: 80px
    font-size: 2.5em
    line-height: 1.2
    letter-spacing: -2px
    margin: 0 auto
    text-align: center
    font-family: $Gotham
    font-weight: 500