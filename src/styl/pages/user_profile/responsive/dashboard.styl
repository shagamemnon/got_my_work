.user-dashboard
  max-width: 1000px
  margin: auto
  padding: 100px 20px

  .user-info
    display: block
    margin-bottom: 50px
    height: auto

    img.avatar
      stack()
      height: auto
      border-radius: 100%

    article
      stack()

      .span

        h2
          header2()

      h5
        header4()
        font-size: 1.2em
        font-weight: 300
        color: #666
        margin-bottom: 25px

      h6
        paragraph()
        font-weight: 700

    img.feedback
      stack()
      float: right
      text-align: center
      border-radius: 100%

  .dashboard-container
    display: block
    height: auto

    .sidebar
      stack()

      span
        col(1/3)


        h6
          stack()
          font-size: 0.5em
          display: inline-block
          color: white
          font-weight: 400

        img
          stack()

    .content
      stack()
