.profile-container
  max-width: 1000px
  border-top: 62px solid transparent
  margin: auto
  padding: 80px 0
  display: block
  height: 900px

  .user-info
    display: block
    margin-bottom: 80px
    height: 120px
      
    .profile-picture
      col(1/7)
      cursor: pointer
      border-radius: 100%
      display: block
      cursor: pointer
      border: none

      .avatar
        display: block
        text-align: center
        background-image: url('https://s3.amazonaws.com/igotmywork/user_profile/upload_placeholder.png')
        height: 118px
        background-size: 118px auto
        background-repeat: no-repeat
        background-position: center
        position: relative
        border: none
        border-radius: 100%
        
        button
          border: 1px solid transparent

        img#avatar
          width: 118px
          height: 118px
          opacity: 1
          border-radius: 100%
          cursor: pointer
          visibility: hidden

        .uploadimgbtn
          font-size: 0px
          background-color: #eee
          position: absolute
          height: 118px
          width: 118px
          cursor: pointer
          background-image: url('https://s3.amazonaws.com/igotmywork/user_profile/upload_image.png')
          background-size: 80px auto
          background-repeat: no-repeat
          background-position: center
          border-radius: 100%
          border: none
          opacity: 0
          top: 0
          single-transition( opacity )
          
          &:hover, &:active, &:focus, &:after
            opacity: 0.9
                
    article
      col(5/7)

      .span
        padding-top: 6px
        padding-bottom: 3px

        h2
          header2()
          letter-spacing: -1px
          display: inline
          font-weight: 700

      a#open-skill, #open-location
        display: block
        margin-bottom: 30px
        margin-left: 3px
        text-decoration: none
        visibility: visible
        
        img
          padding-left: 5px

      input[name="skill"], h5
        font-size: 1.1em
        font-weight: 300
        color: #666
        border: none
        cursor: pointer
        display: inline
      
      input[name="location"], h6
        cursor: pointer
        margin-top: 0px
        display: inline
        paragraph()
        color: #333
        font-weight: 700
        border: none
      
      h5, h6
        visibility: visible

    .feedback
      col(1/7)
      float: right
      text-align: center
      border-radius: 100%
      
      img
        display: block
        max-height: 110px
        center()
      
      h6
        display: block
        paragraph()
        center()
        font-size: 0.7em
        font-weight: 700
        padding-top: 8px
    
  .sidebar
    span(1/4)
    background-color: $primary-color
    border-top: 25px solid $teal
    padding-top: 50px
    height: 600px

    span
      background-color: #087cc9
      padding-bottom: 0
      margin-bottom: 0px
      margin-left: 3px
  
    span.active
      
      a
        box-shadow: inset 5px 0 0px 0 $teal
        opacity: 1
        background: #087cc9

    a
      display: block
      text-decoration: none
      height: 40px
      padding-top: 10px
      padding-bottom: 0
      margin-bottom: 0px
      cursor: pointer
      padding-left: 50px
      opacity: 0.7
      single-transition( opacity )
      
      &:hover, &:active
        single-transition( opacity )
        opacity: 1
        background-color: #087cc9

      p
        font-size: 1.2em
        position: relative
        margin-left: -15px
        color: #00FF00
        display: inline
        padding-right: 5px

      h6
        paragraph()
        font-size: 0.7em
        display: inline
        color: white
        font-weight: 400

      img
        height: 20px
        display: inline
        top: 5px
        position: relative
        padding-right: 10px

    &:after
      display: block
      clear: both
      content: ''
 
  .user-profile
    span(3/4)
    box-shadow: 0 -1px 0 0 yellow, 0 1px 0 0 yellow, 1px 0 0 0 yellow
    padding-top: 74px
    height: 600px

    .tab.active
      h4
        padding-left: 20px

    .info-row
      display: block

    article
      width: 100%
      display: block

      .span
        padding-top: 6px
        padding-bottom: 3px

        h2
          header2()
          letter-spacing: -1px
          display: inline
          font-weight: 700

      a#open-phone
        display: block
        margin-bottom: 30px
        margin-left: 3px
        text-decoration: none
        visibility: visible
        
        img
          padding-left: 5px

      input[name="phone"], h5
        font-size: 1.1em
        font-weight: 300
        color: #666
        border: none
        cursor: pointer
        display: inline
      
      h5, h6
        visibility: visible

    .add-technology
      display: block
      margin: auto

      button
        width: 100%
        height: 50px
        border-top-left-radius: 0px
        border-top-right-radius: 0px
        border-bottom-right-radius: 2px
        border-bottom-left-radius: 2px
        border-top: 0px
        border-left: 1px
        border-right: 1px
        border-bottom: 1px
        border-color: #ddd
        font-size: 14px
        font-weight: 500
        background-color: #f9faff
        max-width: 100%
        cursor: pointer

    .tab
      display: none

      textarea
        margin-left: 30px
        margin-top: 30px
        padding: 15px
        height: 150px
        width: 450px
        border: 2px solid #ddd
        border-radius: 1px
        font-size: 0.9em
        outline: none
        
        &:focus
          border: 2px solid $teal

      h4.tab-title, em
        padding-left: 30px
      
      em, a, p
        margin-bottom: 30px
        col(1/4)
        font-size: 0.9em
      
      p
        font-weight: 300
        color: #666
        border: none
        cursor: pointer
      
      a
        color: $primary-color
        cursor: pointer
        
      
      h4.tab-title
        header4()
        display: block
      
    .tab.active
      display: block
          
    .hidden
      visibility: hidden



#input-skill, #input-location
  background-color: white
  position: absolute
  z-index: 50
  display: none
  top: 190px
  opacity: 1
  height: 24px
  border-bottom: 1px dotted #555
  
  input
    background-color: white
    padding-left: 3px
    opacity: 1
    display: inline
    outline: none
    z-index: 51
    background-image: url('https://s3.amazonaws.com/igotmywork/user_profile/pencil.png')
    background-size: auto 13px
    background-repeat: no-repeat
    background-position: right
  
  img
    display: inline
    padding-left: 8px
    cursor: pointer

#input-location
  top: 236px
  z-index: 51