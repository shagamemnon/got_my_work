- var levels = ["Novice", "Intermediate", "Expert"]

.profile-container
  .user-profile
    -if ( profile )
      h2 My Work
      .info-row
        em.photo Profile Picture
        img(src=#{profile.attributes.avatar}, id="avatar")
        input(type="file" , name="avatar", style="display:none")
        button Upload Photo
      .hr
      .info-row
        em Email
        p= profile.attributes.email
        a Edit
      .info-row
        em Name
        p= profile.attributes.username
        a Edit
      .info-row
        em Token ID
        p= profile.attributes.TokenID
        a Edit
      .info-row
        em Address
        input(type="text", name="address", placeholder="Add Address")
        a Edit
      .info-row
        em Phone
        p= profile.attributes.Phone
        a Edit
      .info-row
        em Gender
        p= profile.attributes.Gender
        a Edit
      .info-row
        em Birthday
        - if ( profile.attributes.Birthday == '' )
          input(type="text", name="birthday", placeholder="Add Birthday")
        - else
          p= profile.attributes.Birthday
        a Edit
      .info-row
        em Experience
        - if ( !profile.attributes.Experience || profile.attributes.Experience == '' )
          input(type="text", name="experience", placeholder="Add Experience")
        - else
          p= profile.attributes.Experience
        a Edit
      .user-profile
        h2 Technologies
        -if ( profile.attributes.Technologies )
          - each item, i in profile.attributes.Technologies
            .info-row
              em= i == "NET" ? ".NET" : i
              select( name= i + "_skill", type="text" )
                - each level in levels
                  option(selected= (level == item)) #{level}
              a Edit
