  .user-profile
    -if ( profile )
      #tab1.tab.active
        h4.tab-title OVERVIEW

        textarea(placeholder="Tell us a little about yourself.")
      #tab2.tab
        h4.tab-title PROFILE

        em.hidden Token ID
        p.hidden= profile.attributes.TokenID
        a.hidden Edit

        em Phone
        p= profile && profile.attributes.Phone ? profile.attributes.Phone : "Add Your Mobile #"
        a Edit

        em Gender
        p= profile && profile.attributes.Gender ? profile.attributes.Gender : "Male or Female?"
        a Edit

        em Birthday
        - if ( profile.attributes.Birthday == '' )
          input(type="text", name="birthday", placeholder="Add Birthday")
        - else
          p= profile && profile.attributes.Birthday ? profile.attributes.Birthday : "DOB"
        a Edit

        em Experience
        - if ( profile.attributes.Experience == '' )
          input(type="text", name="experience", placeholder="Add Experience")
        - else
          p= profile && profile.attributes.Experience ? profile.attributes.Experience : "Experience"
        a Edit
