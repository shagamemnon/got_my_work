        img(src="https://s3.amazonaws.com/igotmywork/user_profile/ribbon.png")
        h6 ACHIEVEMENTS
    span
      a(href="#tab6")
        img(src="https://s3.amazonaws.com/igotmywork/user_profile/feedback.png")
        h6 FEEDBACK
  .user-profile
    -if ( profile )
      #tab1.tab.active
        h4.tab-title Overview
        textarea(placeholder="Tell us a little about yourself.")
        button SAVE
      #tab2.tab
        h4.tab-title Profile


        em.hidden Token ID
        p.hidden= profile.attributes.tokenId
        a.hidden Edit

        .item
          em Phone
          p= profile && profile.attributes.phone ? profile.attributes.phone : "+•• ••• ••• ••••"
          a Edit

        .item
          em Gender
          p= profile && profile.attributes.gender ? profile.attributes.gender : "M/F"
          a Edit

        em Birthday
        - if ( profile.attributes.Birthday == '' )
          input(type="text", name="birthday", placeholder="Add Birthday")
        - else
          p= profile && profile.attributes.birthday ? profile.attributes.birthday : "MM/DD/YYYY"
        a Edit

        em Experience
        - if ( profile.attributes.Experience == '' )
          input(type="text", name="experience", placeholder="Add Experience")
        - else
          p= profile && profile.attributes.experience ? profile.attributes.experience : "Select"
        a Edit
