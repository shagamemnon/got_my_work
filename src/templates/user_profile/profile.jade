- var levels = ["Novice", "Intermediate", "Expert"]

.profile-container
  .user-info
    .profile-picture
      .avatar
        -if(profile && profile.attributes.avatar)
          img(id="avatar", src= profile.attributes.avatar, style="visibility: visible;")
        -else
          img(id="avatar", src="")
        .uploadimgbtn(onclick='getFile()')
        article(style='height: 0px;width: 0px; overflow:hidden;border:none')
            input(name="avatar", id="upfile", type="file", value="upload",accept="image/*", class="upload-image")
    article.data-change
      .span
        h2= profile ? profile.attributes.fullName : ""
        h2(style="color: #00FF00") •
      a#open-skill(href="#")
        h5= profile && profile.attributes.skill ? profile.attributes.skill : "Add Your Skills"
        img(height="11px", src="https://s3.amazonaws.com/igotmywork/user_profile/pencil.png")
      form#input-skill(href="#")
        input#edit-skill(type="text", name="skill", value= profile && profile.attributes.skill ? profile.attributes.skill : "", placeholder="Add Your Skills", autofocus)
        img#close-skill(height="13px", src="https://s3.amazonaws.com/igotmywork/signup/close.png")
        img#save-skill(height="13px", src="https://s3.amazonaws.com/igotmywork/user_profile/check.png")
      
      a#open-location(href="#")
        h6= profile && profile.attributes.adress ? profile.attributes.adress : "Add Your Location"
        img(height="11px", src="https://s3.amazonaws.com/igotmywork/user_profile/pencil.png")
      form#input-location
        input#edit-location(type="text", name="location", value= profile && profile.attributes.adress ? profile.attributes.adress : "", placeholder="Add Your Location", autofocus)
        img#close-location(height="13px", src="https://s3.amazonaws.com/igotmywork/signup/close.png")
        img#save-location(height="13px", src="https://s3.amazonaws.com/igotmywork/user_profile/check.png")

    .feedback
      img(src="https://s3.amazonaws.com/igotmywork/user_profile/feedback.png")
      h6 Positive Feedback
  .sidebar
    span.active
      a(href="#tab1")
        img(src="https://s3.amazonaws.com/igotmywork/user_profile/overview.png")
        h6 BIO
    span
      a(href="#tab2")
