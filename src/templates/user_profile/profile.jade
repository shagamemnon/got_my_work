.profile-container
  .user-profile
    h2 My Work
    .info-row
      em.photo Profile Picture
      img(src="https://s3.amazonaws.com/igotmywork/user_profile/avatar.png")
      button Upload Photo
    .hr
    .info-row
      em Email
      p you@igotmywork.com
      a Edit
    .info-row
      em Name
      p Frank Taylor
      a Edit
    .info-row
      em Token ID
      p IGM 1838491904
      a Edit
    .info-row
      em Address
      input(type="text", name="address", placeholder="Add Address")
      a Edit
    .info-row
      em Phone
      p +001 123-456-789
      a Edit
    .info-row
      em Gender
      p you@igotmywork.com
      a Edit
    .info-row
      em Birthday
      input(type="text", name="address", placeholder="Add Birthday")
      a Edit
    .info-row
      em Experience
      input(type="text", name="address", placeholder="Add Experience")
      a Edit

  .user-profile
    h2 Technologies
    .info-row
      em .NET
      select( name="skill", type="text" ) Skill
        option( name="Novice", type="text" ) Novice
        option( name="Intermediate", type="text" ) Intermediate
        option( name="Expert", type="text" ) Expert
      a Edit
    .info-row
      em Magento
      select( name="skill", type="text" ) Skill
        option( name="Novice", type="text" ) Novice
        option( name="Intermediate", type="text" ) Intermediate
        option( name="Expert", type="text" ) Expert
      a Edit
    .info-row
      em Java
      select( name="skill", type="text" ) Skill
        option( name="Novice", type="text" ) Novice
        option( name="Intermediate", type="text" ) Intermediate
        option( name="Expert", type="text" ) Expert
      a Edit
    .add-technology
      button Add Technology

  .user-profile
    h2 Achievements
    .info-row
      em Awards
      p(style="text-align: center") 2014 Developer of the Year
    .info-row
      em Nominations
      p(style="text-align: center") 2015 Developer of the Year

    .info-row
      em Progress This Year
    img(src="https://s3.amazonaws.com/igotmywork/user_profile/graph.png")